<AnchorPane fx:id="root" prefHeight="600.0" prefWidth="1200.0" styleClass="forgot-password-container" stylesheets="@../../assets/css/forgotPassword.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.senac.school.controller.ForgotPasswordController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="600.0" prefWidth="460.0">
         <children>
            <HBox prefHeight="42.0" prefWidth="460.0">
               <children>
                  <JFXButton onAction="#handleBackLogin" text=" ">
                     <graphic>
                        <ImageView fitHeight="37.0" fitWidth="37.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../assets/image/arrow-back.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
               </children>
            </HBox>
            <VBox alignment="CENTER" prefHeight="86.0" prefWidth="460.0">
               <children>
                  <Label text="SCHOOL MAP" textFill="#545454">
                     <font>
                        <Font name="Impact" size="40.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
            <VBox alignment="CENTER" prefHeight="199.0" prefWidth="600.0">
               <children>
                  <Label text="Esqueceu a sua senha?" textFill="#8a8888">
                     <font>
                        <Font name="Impact" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Text fill="#656565" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Por favor, digite o endereço de e-mail que você usou quando criou a sua conta. Nos enviaremos instruções para você por e-mail para resetar a sua senha." textAlignment="CENTER" wrappingWidth="324.3203125">
